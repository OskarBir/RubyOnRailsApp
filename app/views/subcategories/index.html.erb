<p id="notice"><%= notice %></p>

<h1>Listing Subcategories</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan='3' style='width: 15%; text-align: center;'>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= Category.find(subcategory.category_id).name %></td>
        <td><%= subcategory.created_at%></td>
        <td><%= subcategory.updated_at %></td>
        <td><%= link_to 'Show', subcategory, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_subcategory_path(subcategory), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_subcategory_path, class: 'btn btn-success' %>
