<h2><%= t('devise.sign_up.sign_up') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, label: t('devise.sign_up.username') %>
    <%= f.input :email, required: true, label: t('devise.sign_up.email') %>
    <%= f.input :password, required: true, label: t('devise.sign_up.password'), hint: ("#{@minimum_password_length} " + t('simple_form.error_notification.minimum_characters') if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: t('devise.sign_up.password_confirmation') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.sign_up.sign_up'), class: 'btn btn-success' %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
