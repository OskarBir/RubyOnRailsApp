<p id="notice"><%= notice %></p>

<h1>Listing Results</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Result</th>
      <th>User</th>
      <th>Word</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan='3' style='width: 15%; text-align: center;'>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.result %></td>
        <td><%= User.find(result.user_id).username %></td>
        <td><%= Word.find(result.word_id).name %></td>
        <td><%= result.created_at%></td>
        <td><%= result.updated_at %></td>
        <td><%= link_to 'Show', result, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_result_path(result), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', result, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_result_path, class: 'btn btn-success' %>
