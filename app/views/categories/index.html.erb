<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan='3' style='width: 15%; text-align: center;'>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.created_at%></td>
        <td><%= category.updated_at %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
