<p id="notice"><%= notice %></p>

<h1><%= t('admin.category') %></h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th><%= t('admin.name') %></th>
      <th><%= t('admin.created_at') %></th>
      <th><%= t('admin.updated_at') %></th>
      <th colspan='3' style='width: 15%; text-align: center;'><%= t('admin.action') %></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.created_at%></td>
        <td><%= category.updated_at %></td>
        <td><%= link_to t('admin.show'), category, class: 'btn btn-default' %></td>
        <td><%= link_to t('admin.edit'), edit_category_path(category), class: 'btn btn-default' %></td>
        <td><%= link_to t('admin.delete'), category, method: :delete, class: 'btn btn-default', data: { confirm: t('devise.edit.you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.new_category'), new_category_path, class: 'btn btn-success' %>
