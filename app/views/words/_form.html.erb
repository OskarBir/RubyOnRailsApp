
<%= simple_form_for(@word) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <strong>Subcategory: </strong><br>
    <%= f.collection_select :subcategory_id, Subcategory.order(:name),:id,:name, {}, {:class=>'form-control'} %>
    <br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
