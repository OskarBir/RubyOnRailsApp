<p id="notice"><%= notice %></p>

<h1><%= t('admin.word') %></h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%= t('admin.name') %></th>
    <th><%= t('admin.subcategory') %></th>
    <th><%= t('admin.created_at') %></th>
    <th><%= t('admin.updated_at') %></th>
    <th colspan='3' style='width: 15%; text-align: center;'><%= t('admin.action') %></th>
  </tr>
  </thead>

  <tbody>
  <% @words.each do |word| %>
    <tr>
      <td><%= word.name %></td>
      <td><%= Subcategory.find(word.subcategory_id).name %></td>
      <td><%= word.created_at %></td>
      <td><%= word.updated_at %></td>
      <td><%= link_to t('admin.show'), word, class: 'btn btn-default' %></td>
      <td><%= link_to t('admin.edit'), edit_word_path(word), class: 'btn btn-default' %></td>
      <td><%= link_to t('admin.delete'), word, method: :delete, class: 'btn btn-default', data: {confirm: t('devise.edit.you_sure')} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.new_word'), new_word_path, class: 'btn btn-success' %>
