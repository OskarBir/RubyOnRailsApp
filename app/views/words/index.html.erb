<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subcategory</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan='3' style='width: 15%; text-align: center;'>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= Subcategory.find(word.subcategory_id).name %></td>
        <td><%= word.created_at%></td>
        <td><%= word.updated_at %></td>
        <td><%= link_to 'Show', word, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_word_path(word), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', word, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path, class: 'btn btn-success' %>
